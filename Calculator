#include <stdio.h>
// Int main is a function letting the program know that it needs to return an integer at the end of execution. we do so by putting "return 0;" at the end of the program.
int main(true)
{
			char op;
			//char is used to implement arthimetic operations. OP lets the program know operators will be used.
			double first, second;
			// double is a variable that stores numbers in computer memory. 
			printf("Enter operand (+, -, *, /): ");
			//printf prints a string 
			scanf_s("%c", &op);
			//scanf_s reads data from the standard input string and writes it into an argument. %c prints ASCII representation of a character.
			printf("\nEnter two operands: ");
			scanf_s("%lf %lf", &first, &second);
			//%1lf Tells the program how many digits should be behind the decimal point.
			switch (op) {
				// the switch statement takes a variable and tests it for equality against a list of values. Each value is a "case".
			case '+':
				printf("%.1lf + %.1lf = %.1lf\n", first, second, first + second);
				//%.1lf limits the output to one decimal place
				break;
				//A break statement terminates the loop or switch statement.
			case '-':
				printf("%.1lf - %.1lf = %.1lf\n", first, second, first - second);
				break;
			case '*':
				printf("%.1lf * %.1lf = %.1lf\n", first, second, first * second);
				break;
			case '/':
				printf("%.1lf / %.1lf = %.1lf\n", first, second, first / second);
				break;
				// operator doesn't match any operand available
			default:
				printf("Error! Operator is not correct\n");
			}
	return 0;
}
